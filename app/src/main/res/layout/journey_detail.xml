<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="jvm"
            type="bchsdr.viewModel.JourneyViewModel"
            />
        <variable
            name="handler"
            type="bchsdr.JourneyDetail"
            />
    </data>

    <LinearLayout
        android:id="@+id/journey_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/label_name"
                android:text="@string/labelName"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_new"
                android:text="@{jvm.name}"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                android:id="@+id/label_start_date"
                android:text="@string/labelDeparture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
                <TextView
                    android:id="@+id/start_date"
                    android:text="@{jvm.from}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:onClick="@{handler.showDatePickerDialog}"
                    />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/label_end_date"
                android:text="@string/labelReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/end_date"
                android:text="@{jvm.to}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="@{handler.showDatePickerDialog}"
            />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/journey_note_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelAddNote"
            android:onClick="@{handler.addNote}"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/buttoncancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:onClick="@{handler.close}"/>
            <Button
                android:id="@+id/buttoncreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{jvm.labelcreatetravel}"
                android:onClick="@{()-> handler.saveJourney(jvm.id ,nameNew.getText().toString(), startDate.getText().toString(), endDate.getText().toString())}"/>
        </LinearLayout>
    </LinearLayout>
</layout>