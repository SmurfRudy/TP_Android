<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="jvm"
            type="bchsdr.viewModel.JourneyViewModel"
            />
        <variable
            name="handler"
            type="bchsdr.JourneyDetail"
            />
    </data>

    <LinearLayout
        android:id="@+id/journey_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/label_name"
            android:text="@{jvm.name}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <GridLayout
            style="?android:attr/listSeparatorTextViewStyle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout>
                <TextView
                android:id="@+id/label_start_date"
                android:text="@{jvm.labelDeparture}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />
                <TextView
                    android:id="@+id/start_date"
                    android:text="@{jvm.from}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <!--<Button
                    android:id="@+id/pick_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{jvm.start_date}"
                    android:onClick="showDatePickerDialog" />-->
            </LinearLayout>
            <LinearLayout>
                <TextView
                    android:id="@+id/label_end_date"
                    android:text="@{jvm.labelReturn}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/end_date"
                    android:text="@{jvm.to}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                />
                <!--<Button
                    android:id="@+id/pick_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{jvm.end_date}"
                    android:onClick="showDatePickerDialog" />-->
            </LinearLayout>

        </GridLayout>
    </LinearLayout>

</layout>